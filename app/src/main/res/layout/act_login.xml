<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <ImageView
        android:id="@+id/act_login_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_marginTop="278px"
        android:layout_marginLeft="356px"
        android:layout_marginRight="356px"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42px"
        android:layout_marginRight="42px"
        android:layout_marginTop="150px"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/act_login_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/act_login_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:textColorHint="@color/white"
                android:textSize="@dimen/font_size"
                android:layout_marginLeft="80px"
                android:background="@color/color_main"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                android:layout_below="@id/act_login_name"
                />
            <EditText
                android:id="@+id/act_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:textColorHint="@color/white"
                android:textSize="@dimen/font_size"
                android:layout_marginTop="80px"
                android:layout_marginLeft="80px"
                android:background="@color/color_main"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                android:layout_below="@id/act_login_name"
                />
        </LinearLayout>
       <RelativeLayout
           android:id="@+id/act_login_relative"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:layout_marginTop="50px"
           android:layout_below="@id/act_login_ll"
           >
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_alignParentLeft="true"
               >
               <CheckBox
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/style_checkbox"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="记住密码"
                   android:textSize="@dimen/font_small"
                   android:textColor="@color/cyan"
                   />

           </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="忘记密码 ？"
               android:layout_alignParentRight="true"
               android:textColor="@color/cyan"
               android:textSize="@dimen/font_small"
               />
       </RelativeLayout>
      <Button
          android:id="@+id/act_login_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="登录"
          android:textColor="@color/white"
          android:background="@drawable/logo_btn"
          android:layout_marginTop="66px"
          android:layout_below="@id/act_login_relative"
          />
        <TextView
            android:id="@+id/act_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有账号？点我注册"
            android:layout_marginRight="42px"
            android:layout_marginTop="50px"
            android:textColor="@color/cyan"
            android:textSize="@dimen/font_small"
            android:layout_below="@id/act_login_btn"
            android:layout_alignParentRight="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="130px"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_below="@id/act_login_register"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="其他方式登录"
               android:textColor="@color/white"
                android:textSize="@dimen/font_size"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60px"
                >
                <ImageButton
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:background="@drawable/wchat"
                   android:layout_margin="50px"
                    />
                <ImageButton
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:background="@drawable/qq1"
                    android:layout_margin="50px"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

