<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <ImageView
        android:id="@+id/act_login_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_launcher"
        android:layout_marginTop="278px"
        android:layout_marginLeft="356px"
        android:layout_marginRight="356px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42px"
        android:layout_marginRight="42px"
        android:layout_marginTop="150px"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/act_forget_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:textColorHint="@color/white"
            android:textSize="@dimen/font_size" />

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:layout_marginTop="50px"
           >
           <EditText
               android:id="@+id/act_forget_vt"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="请输入验证码"
               android:textColorHint="@color/white"
               android:textSize="@dimen/font_size" />
           <Button
               android:id="@+id/act_forget_vtbtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="验证码"
               android:textSize="@dimen/font_small"
               android:layout_alignParentRight="true"
               android:background="@color/cyan"
               />
       </RelativeLayout>
      <Button
          android:id="@+id/act_forget_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="下一步"
          android:background="@color/cyan"
          android:layout_marginTop="66px"
          />
    </LinearLayout>

</LinearLayout>

