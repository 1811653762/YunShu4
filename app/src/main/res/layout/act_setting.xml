<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <com.tck.transportation.View.SimpleTitleView
        android:id="@+id/simpleTitleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/act_setting_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="字体大小设置"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/act_setting_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="推送消息"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/act_setting_sugg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="意见反馈"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/act_setting_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="关于"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/act_setting_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="清除缓存"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/act_setting_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="注销"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
    </RelativeLayout>

</LinearLayout>

